{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // Include directories for headers
                "-I${workspaceFolder}/../Dependencies/GLAD/include", // GLAD
                "-I${workspaceFolder}/../Dependencies/glfw/include", // GLFW
                "-I${workspaceFolder}/../Dependencies/glm",          // GLM
                "${file}",
                // Include glad.c or other .c/.cpp files
                "${workspaceFolder}/glad.c",  // GLAD
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // Link directories for static libraries
                "-L${workspaceFolder}/../Dependencies/glfw/lib",
                "-lglfw", // Link GLFW library
                "-ldl",   // Link dynamic loader (needed for GLAD)
                "-lGL"    // Link OpenGL
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
